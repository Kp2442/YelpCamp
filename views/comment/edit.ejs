<% include ../partials/header %>

<h1>Edit Comment</h1>

<form
	action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT"
	method="POST"
>
	<div class="form-group">
		<label for="text">Text</label>
		<textarea class="form-control" id="text" name="comment[text]" rows="3">
<%= comment.text %></textarea
		>
	</div>
	<button type="submit" class="btn btn-lg btn-outline-warning">Edit</button>
</form>

